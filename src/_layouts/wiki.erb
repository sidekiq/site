<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <% title = data.slug.tr("-", ' ') %>
    <%= render "head", metadata: site.metadata, title: title %>
  </head>
  <body class="<%= data.layout %> <%= data.page_class %>">
    <style>
      h1, h2, h3 { border-bottom: 1px solid black; }
      img { max-width:100%; height: auto; }
    </style>
    <%= render "header", metadata: site.metadata, title: title %>

    <main class="container wiki">
      <h1><%= title %></h1>
      <p class="small">Last synchronized at <%= Time.now.utc.iso8601 %></p>
      <div class="row">
        <div class="col-md-9">
          <%= yield %>
          <div class="inline-block">
            <div class="col-md-6">
              <% if n = page.previous_doc %>
                <a href="<%= n.relative_url %>">&larr; <%= n.data.slug %></a>
              <% end %>
            </div>
            <div class="col-md-6">
              <% if n = page.next_doc %>
                <a href="<%= n.relative_url %>"><%= n.data.slug %> &rarr;</a>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <%= render "wsidebar" %>
        </div>
      </div>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
